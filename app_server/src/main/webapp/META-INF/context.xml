<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Cars_Sample_App">
    <!-- Specify a JDBC datasource for MySQL -->
    <Resource name="jdbc/standard" 
              auth="Container"
              type="javax.sql.DataSource" 
              username="root" 
              password="AppDynamics"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://mysql:3306/supercars?useSSL=false&amp;serverTimezone=America/Los_Angeles"
              maxIdle="4" />
    <Resource name="jdbc/c3p0" 
              auth="Container"
              type="com.mchange.v2.c3p0.ComboPooledDataSource"
              factory="org.apache.naming.factory.BeanFactory"
              maxPoolSize="20"
              minPoolSize="5"
              maxIdleTime="3000" 
              user="root" 
              password="AppDynamics"
              driverClass="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://mysql:3306/supercars?useSSL=false&amp;serverTimezone=America/Los_Angeles"
              />
</Context>
